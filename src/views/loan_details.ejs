<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet'>
</head>
<style>
    /* Add a black background color to the top navigation */
    .topnav {
        background-color: #cd853f;
        overflow: hidden;
    }

    /* Style the links inside the navigation bar */
    .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
    }

    /* Change the color of links on hover */
    .topnav a:hover {
        background-color: #ffdead;
        color: black;
    }

    /* Add a color to the active/current link */
    .topnav a.active {
        background-color: #ffdead;
        color: black;
    }
</style>

<body style="background-color:#ffdead;">
    <div class="topnav">
        <a href="/account_details">Account Details</a>
        <a href="/add">Deposit Money</a>
        <a href="/sub">Withdraw Money</a>
        <a href="/transfer">Transfer Money</a>
        <a href="/account_details/trans_hisrtory">Passbook</a>
        <a href="/loans">Apply for Loan</a>
        <a class="active" href="/loan_details">Loan Details</a>
        <a href="/">Log Out</a></li>
    </div>
    <h1>Loan Details</h1>
    <div>
        <h3 align="center">Sent</h3>
        <%if (loan) { %>
            <div class="row">
                <div class="col-md-1"> </div>
                <div class="col-md-10">
                    <table class="table table-bordered table-hover" style="border-color:#cd853f;">
                        <thead>
                            <tr>
                                <th>Sr no.</th>

                                <th>Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (var i=0;i<loan.length ;i++) {%>


                                <tr>
                                    <td>
                                        <%= i+1 %>
                                    </td>
                                    <td>
                                        <%= loan[i].amount %>
                                    </td>


                                    <% if (loan[i].status=="S" ) { %>
                                        <td style="color: green;">Accepted</td>
                                        <% } else if (loan[i].status=="F" ) { %>
                                            <td style="color: red;">Rejected</td>
                                            <% } else { %>
                                                <td style="color: rgb(2, 45, 235);">Pending</td>
                                                <% } %>

                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-1"> </div>
            </div>
            <% } %>
    </div>

    </div>
</body>

</html>