  <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet'>
</head>
<style>
  /* Add a black background color to the top navigation */
  .topnav {
    background-color: #cd853f;
    overflow: hidden;
  }

  /* Style the links inside the navigation bar */
  .topnav a {
    float: left;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
  }

  /* Change the color of links on hover */
  .topnav a:hover {
    background-color: #ffdead;
    color: black;
  }

  /* Add a color to the active/current link */
  .topnav a.active {
    background-color: #ffdead;
    color: black;
  }

  a:link {
  text-decoration: none;
}

a:visited {
  text-decoration: none;
}

</style>


<body style="background-color:#ffdead;">
  <div class="topnav">
    <a class="active" href="/manager_details">Loan Requests</a>
    <a href="/manager_see_users">See User Details</a>
    <a href="/manager_see_transactions">See All Transactions</a>
    <a href="/">Log Out</a></li>
  </div>

  <h1 align ="center">Loan Requests</h1>
  <h3>Hello Mr/Mrs <%= data.fname %> 
  </h3>
  <br>
  <br>
  <!-- <button><a href="/manager_see_users"> See all Users </a></button>

        <button><a href="/manager_see_transactions">See transaction Details </a></button> -->
  <%if (loans) { %>
    <div class="row">
      <div class="col-md-1"> </div>
      <div class="col-md-10">
        <table class="table table-bordered table-hover" style="border-color:#cd853f;">
          <thead>
            <tr>
              <th>Sr no.</th>
              <th>User ID</th>
              <th>Name</th>
              <th>Account Number</th>
              <th>Amount</th>
              <!-- <th>Accept</th>
              <th>Reject</th> -->
              <th colspan="2" style="text-align: center;" >Action</th>


            </tr>
          </thead>
          <tbody>

            <% for (var i=0;i<loans.length ;i++) {%>


              <tr>
                
                  <td>
                    <%= i+1 %>
                  </td>
                  <td>
                    <%= loans[i].user_id %>
                  </td>
                  <td>
                    <%= loans[i].fname %>
                  </td>
                  <td>
                    <%= loans[i].acc_no %>
                  </td>
                  <td>
                    <%= loans[i].amount %>
                  </td>
                  <td >
                    <button class="btn btn-success"> <a style="color: white;" href="/loan_accept/<%= loans[i].loan_id %>"> Accept </a> </button>
                  </td>

                  <td >
                    <button class="btn btn-danger"> <a style="color: white;" href="/loan_reject/<%= loans[i].loan_id %>"> Reject </a> </button>
                  </td>
                
              </tr>

              <% } %>

          </tbody>
        </table>
      </div>
      <div class="col-md-1"> </div>
    </div>
    <% } %>
</body>

</html>