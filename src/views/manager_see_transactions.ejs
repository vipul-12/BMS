        <a href="/">Log Out</a></li>
      </div>
      <h1 align=center>Transactions </h1> 
    <%if (transactions) { %>
        <div class="row">
            <div class="col-md-1"> </div>
            <div class="col-md-10">
                <table class="table table-bordered table-hover" style="border-color:#cd853f;">
                    <thead>
                        <tr>
                            <th>Sr no.</th>
                            <th>Transaction id</th>
                            <th>Sender's Account No.</th>
                            <th>Reciever's Account No.</th>
                            <th>Account no</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i=0;i<transactions.length ;i++) {%>

                            
                            <tr >
                                <td>
                                    <%= i+1 %>
                                </td>
                                <td>
                                    <%= transactions[i].trans_id %>
                                </td>
                                <td>
                                    <%= transactions[i].sender_acc_no %>
                                </td>
                                <td>
                                    <%= transactions[i].reciever_acc_no %>
                                </td>
                                <td>
                                    <%= transactions[i].amount %>
                                </td>
                                <% if(transactions[i].status == "S"){ %>
                                    <td style="color: green;">Succesful</td>
                                  <% } else{ %>  
                                    <td style="color: red;">Failed</td>
                                 <% } %> 

                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-1"> </div>
        </div>
        <% } %>


</body>

