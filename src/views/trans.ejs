<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet'>
</head>
<style>
    /* Add a black background color to the top navigation */
    .topnav {
        background-color: #cd853f;
        overflow: hidden;
    }

    /* Style the links inside the navigation bar */
    .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
    }

    /* Change the color of links on hover */
    .topnav a:hover {
        background-color: #ffdead;
        color: black;
    }

    /* Add a color to the active/current link */
    .topnav a.active {
        background-color: #ffdead;
        color: black;
    }
</style>

<body style="background-color:#ffdead;">
    <div class="topnav">
        <a href="/account_details">Account Details</a>
        <a href="/add">Deposit Money</a>
        <a href="/sub">Withdraw Money</a>
        <a href="/transfer">Transfer Money</a>
        <a class="active" href="/account_details/trans_hisrtory">Passbook</a>
        <a href="/loans">Apply for Loan</a>
        <a href="/loan_details">Loan Details</a>
        <a href="/">Log Out</a></li>
    </div>
    <h1>Passbook</h1>
    <div>
        <h3 align="center">Sent</h3>
        <%if (sender_table) { %>
            <div class="row">
                <div class="col-md-1"> </div>
                <div class="col-md-10">
                    <table class="table table-bordered table-hover" style="border-color:#cd853f;">
                        <thead>
                            <tr>
                                <th>Sr no.</th>
                                <th>Reciever's account no</th>
                                <th>Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (var i=0;i<sender_table.length ;i++) {%>

                                <!-- <b>To: </b><%= sender_table[i].reciever_acc_no  %> <b>Amount : </b> <%= sender_table[i].amount %><br> -->
                                <tr>
                                    <td>
                                        <%= i+1 %>
                                    </td>
                                    <td>
                                        <%= sender_table[i].reciever_acc_no %>
                                    </td>
                                    <td>
                                        <%= sender_table[i].amount %>
                                    </td>
                                    <% if(sender_table[i].status=="S" ){ %>
                                        <td style="color: green;">Succesful</td>
                                        <% } else{ %>
                                            <td style="color: red;">Failed</td>
                                            <% } %>

                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-1"> </div>
            </div>
            <% } %>
    </div>

    <div>

        <h3 align="center">Recieved</h3>
        <%if (reciever_table) { %>
            <div class="row">
                <div class="col-md-1"> </div>
                <div class="col-md-10">
                    <table class="table table-bordered table-hover" style="border-color:#cd853f;">
                        <thead>
                            <tr>
                                <th>Sr no.</th>
                                <th>Sender's account no</th>
                                <th>Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (var i=0;i<reciever_table.length ;i++) {%>

                                <tr>
                                    <td>
                                        <%= i+1 %>
                                    </td>
                                    <td>
                                        <%= reciever_table[i].reciever_acc_no %>
                                    </td>
                                    <td>
                                        <%= reciever_table[i].amount %>
                                    </td>
                                    <% if(reciever_table[i].status=="S" ){ %>
                                        <td style="color: green;">Succesful</td>
                                        <% } else{ %>
                                            <td style="color: red;">Failed</td>
                                            <% } %>

                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-1"> </div>
            </div>
            <% } %>
    </div>
</body>

</html>